{
  "name": "@kb-labs/ai-tests-plugin",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "CLI + workflows implementation for KB Labs AI Tests.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./manifest": {
      "import": "./dist/manifest.v2.js",
      "types": "./dist/manifest.v2.d.ts"
    },
    "./studio/widgets/status": {
      "import": "./dist/studio/widgets/status-widget.js",
      "types": "./dist/studio/widgets/status-widget.d.ts"
    },
    "./dist/*": "./dist/*"
  },
  "kb": {
    "manifest": "./dist/manifest.v2.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "pretype-check": "pnpm --filter @kb-labs/ai-tests-plugin build",
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/ai-tests-contracts": "workspace:*",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/manifest",
    "@kb-labs/plugin-runtime": "workspace:*",
    "@kb-labs/shared-command-kit": "workspace:*",
    "fast-glob": "^3.3.2",
    "react": "^18.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
